{
  "info": {
    "name": "QuanLyBanHang API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {"raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password\"\n}"
            }
          }
        },
        {
          "name": "Status",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}", "type": "text"}
            ],
            "url": {"raw": "{{baseUrl}}/api/status", "host": ["{{baseUrl}}"], "path": ["api","status"]}
          }
        }
      ]
    },
    {
      "name": "SanPham",
      "item": [
        {
          "name": "List Products",
          "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}], "url": {"raw": "{{baseUrl}}/api/sanpham", "host": ["{{baseUrl}}"], "path": ["api","sanpham"]}}
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {"raw": "{{baseUrl}}/api/sanpham", "host": ["{{baseUrl}}"], "path": ["api","sanpham"]},
            "body": {"mode": "raw", "raw": "{\n  \"TenSP\": \"Ban Tra\",\n  \"GiaSP\": 199.99,\n  \"SoLuongTonKho\": 3,\n  \"attributes\": {\n    \"color\": \"brown\"\n  }\n}"}
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {"raw": "{{baseUrl}}/api/sanpham/1", "host": ["{{baseUrl}}"], "path": ["api","sanpham","1"]},
            "body": {"mode": "raw", "raw": "{\n  \"GiaSP\": 149.99,\n  \"SoLuongTonKho\": 10\n}"}
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {"raw": "{{baseUrl}}/api/sanpham/1", "host": ["{{baseUrl}}"], "path": ["api","sanpham","1"]}
          }
        }
      ]
    },
    {
      "name": "DonHang",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {"raw": "{{baseUrl}}/api/donhang", "host": ["{{baseUrl}}"], "path": ["api","donhang"]},
            "body": {"mode": "raw", "raw": "{\n  \"NgayDat\": \"2025-10-01\",\n  \"TongTien\": 500,\n  \"TrangThai\": \"Pending\",\n  \"MaKH\": 1,\n  \"MaNV\": 1,\n  \"voucher_code\": \"DISCOUNT10\"\n}"}
          }
        },
        {
          "name": "Update Order",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {"raw": "{{baseUrl}}/api/donhang/1", "host": ["{{baseUrl}}"], "path": ["api","donhang","1"]},
            "body": {"mode": "raw", "raw": "{\n  \"TrangThai\": \"Confirmed\"\n}"}
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {"raw": "{{baseUrl}}/api/donhang/1/status", "host": ["{{baseUrl}}"], "path": ["api","donhang","1","status"]},
            "body": {"mode": "raw", "raw": "{\n  \"new_status\": \"Confirmed\"\n}"}
          }
        }
      ]
    },
    {
      "name": "Alerts",
      "item": [
        {
          "name": "Low Stock Alerts",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "{{baseUrl}}/api/alerts/low-stock", "host": ["{{baseUrl}}"], "path": ["api","alerts","low-stock"]}
          }
        }
      ]
    },
    {
      "name": "Config",
      "item": [
        {
          "name": "Get All Configs",
          "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}], "url": {"raw": "{{baseUrl}}/api/config", "host": ["{{baseUrl}}"], "path": ["api","config"]}}
        },
        {
          "name": "Set Low Stock Threshold",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {"raw": "{{baseUrl}}/api/config/LOW_STOCK_THRESHOLD", "host": ["{{baseUrl}}"], "path": ["api","config","LOW_STOCK_THRESHOLD"]},
            "body": {"mode": "raw", "raw": "{\n  \"value\": \"10\"\n}"}
          }
        }
      ]
    }
  ],
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:8000"},
    {"key": "token", "value": ""}
  ]
}


